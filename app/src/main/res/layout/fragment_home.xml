<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/AppTheme"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/days_one"
        android:text="@string/hello"
        style="@style/MaterialAlertDialog.Material3.Title.Text"
        android:textSize="26sp" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"
        android:scrollIndicators="right"
        android:scrollbarFadeDuration="5"
        android:scrollbarSize="5dp"
        android:scrollbarStyle="outsideOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="7dp"
                android:scrollY="@dimen/cardview_compat_inset_shadow"
                android:scrollbars="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:columnCount="3"
                    android:orientation="horizontal"
                    android:useDefaultMargins="true">

                    <RadioGroup
                        android:id="@+id/tipo"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_columnSpan="2"
                        android:layout_columnWeight="2"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/round"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/checkbox_trhee_options"
                            android:button="@drawable/checkbox_trhee_options"
                            android:checked="true"
                            android:text="@string/roundtrip"
                            android:textAlignment="center" />

                        <RadioButton
                            android:id="@+id/one"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="2dp"
                            android:background="@drawable/checkbox_trhee_options"
                            android:button="@drawable/checkbox_trhee_options"
                            android:text="@string/one_way"
                            android:textAlignment="center"/>


                    </RadioGroup>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/history"
                        android:layout_width="0dp"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        style="@style/Widget.Material3.Button"
                        app:cornerRadius="10dp"
                        android:text="@string/history"/>


                    //Details Text Input

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_row="1"
                        android:layout_columnSpan="3"
                        android:layout_columnWeight="0">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/from"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="90dp"
                            android:hint="@string/from"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            tools:ignore="TextContrastCheck" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_row="2"
                        android:layout_columnSpan="3"
                        tools:ignore="NotSibling">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/to"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/to"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            tools:ignore="TextContrastCheck" />
                    </com.google.android.material.textfield.TextInputLayout>
                    //Date Box

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="0dp"
                        android:layout_row="4"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center_vertical">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/depart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableEnd="@drawable/ic_calendar_today_24"
                            android:hint="@string/depart"
                            android:imeOptions="actionNext"
                            android:inputType="date"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ret"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="0dp"
                        android:layout_row="4"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center_vertical">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/returndate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableEnd="@drawable/ic_calendar_today_24"
                            android:hint="@string/returnn"
                            android:imeOptions="actionNext"
                            android:inputType="date"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <GridLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_row="4"
                        android:layout_column="2"
                        android:layout_columnWeight="1">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_rowWeight="1"
                            android:layout_columnSpan="5"
                            android:layout_columnWeight="5"
                            android:text="@string/pasajeros"
                            style="@style/TextAppearance.Material3.BodyMedium"
                            android:textAlignment="center" />

                        <ImageView
                            android:id="@+id/add"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_row="1"
                            android:layout_column="4"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/background_button_primery"
                            android:contentDescription="@string/add_button"
                            android:src="@drawable/add"
                            app:tint="#ffffff" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:layout_columnSpan="3"
                            android:layout_columnWeight="3"
                            android:layout_gravity="center_vertical">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/pasajero"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLines="1"
                                android:text="@string/xero"
                                android:textAlignment="center"
                                tools:ignore="TextContrastCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:id="@+id/remove"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/background_button_primery"
                            android:contentDescription="@string/rest_button"
                            android:src="@drawable/remove"
                            app:tint="#ffffff"
                            tools:ignore="RedundantDescriptionCheck" />
                    </GridLayout>


                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_row="4"
                        android:layout_columnSpan="3"
                        style="material3.textview"
                        android:text="@string/maximum_numbre_of_stops" />

                    <RadioGroup
                        android:id="@+id/paradas"
                        android:layout_width="match_parent"
                        android:layout_row="5"
                        android:layout_columnSpan="3"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/nonstop"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/checkbox_trhee_options"
                            android:button="@drawable/checkbox_trhee_options"
                            android:checked="true"
                            android:text="@string/non_stop"
                            android:textAlignment="center" />

                        <RadioButton
                            android:id="@+id/onestop"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/checkbox_trhee_options"
                            android:button="@drawable/checkbox_trhee_options"
                            android:text="@string/one_stop"
                            android:textAlignment="center"/>

                        <RadioButton
                            android:id="@+id/more"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/checkbox_trhee_options"
                            android:button="@drawable/checkbox_trhee_options"
                            android:text="@string/_2_or_more"
                            android:textAlignment="center" />
                    </RadioGroup>

                    <com.google.android.material.button.MaterialButton
                        app:cornerRadius="10dp"
                        android:id="@+id/buscar"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_row="6"
                        android:layout_columnSpan="3"
                        android:text="@string/search_flights"/>
                </GridLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tittleres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/days_one"
                android:text="@string/history"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/layoutresultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tittleres"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- Preview Texto historial resultado
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_white"
                    android:padding="10dp"
                    android:text="@string/euismod_nunc_in_sit_ipsum_laoreet_amet_odio_nec_a_vel_sit_condimentum_condimentum_enim_a_atlorem_dolor_est_elit_in_dolor_amet_nec_libero_curabitur_sagittis_libero_viverra_vitae_id_tincidunt_est_vitae_euismod_viverra_nullam_consectetur_adipiscing_nunc_auctor_libero_consectetur_adipiscing_libero_tincidunt_curabitur_sagittis_vel_enim_elit_at_auctor_id_id_id_laoreet_dolor_ipsum_odio_lorem_dolor_nullam" />
                -->
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>